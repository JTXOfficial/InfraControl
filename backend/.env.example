# Server Configuration
PORT=4000
NODE_ENV=development

# PostgreSQL Connection
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=infracontrol
POSTGRES_MAX_CONNECTIONS=20

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/infracontrol

# Redis Connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=1d

# Logging
LOG_LEVEL=debug

# CORS
CORS_ORIGIN=http://localhost:3000 


# AWS Cloud Provider
AWS_API_URL=https://api.aws.example.com
AWS_API_KEY=your_aws_api_key
AWS_API_SECRET=your_aws_api_secret
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# GCP Cloud Provider
GCP_API_URL=https://api.gcp.example.com
GCP_API_KEY=your_gcp_api_key
GCP_PROJECT_ID=your_gcp_project_id
GCP_CLIENT_EMAIL=your_gcp_client_email
GCP_PRIVATE_KEY=your_gcp_private_key

# Azure Cloud Provider
AZURE_API_URL=https://api.azure.example.com
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_RESOURCE_GROUP=your_azure_resource_group 